{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2017",
    "module": "CommonJS",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom",
      "es2022.error",
      "es2021.weakref"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist", "node_modules"]
}
